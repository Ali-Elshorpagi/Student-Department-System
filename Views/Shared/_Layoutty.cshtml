<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Tasks</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Tasks.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.1/css/all.css">
    <style>
        .always-footer{
            position: fixed; 
            bottom: 0;
            width: 100%; 
            background-color: #f8f9fa; 
            text-align: center; 
            padding: 10px 0; 
        }

        .color-gray {
            color: gray;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Tasks</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="student" asp-action="index">Students</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="department" asp-action="index">Departments</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
            <script src="~/lib/jquery/dist/jquery.js"></script>
            @RenderSection("Scripts", false)
        </main>
    </div>
    <footer class="always-footer border-top text-muted">
        <span class="container">
            &copy; 2023 - Ali Elshorpagi 
            <a href="https://github.com/Ali-Elshorpagi" target="_blank"><i class="fab fa-github color-gray"></i></a> -
            <a href="https://www.linkedin.com/in/ali-elshorpagi/" target="_blank"><i class="fab  fa-linkedin color-gray"></i></a>
        </span>
       </footer>
</body>
</html>
